{
  "manifest_version": 3,
  "name": "Ecualizador Persistente",
  "version": "1.0",
  "description": "Ecualizador de audio que persiste aunque se cierre el popup",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "listen.png",
      "48": "listen.png",
      "128": "listen.png"
    }
  },
  "icons": {
    "16": "listen.png",
    "48": "listen.png",
    "128": "listen.png"
  },
  "permissions": [
    "storage",
    "tabCapture",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}